<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gtja="http://schemas.android.com/apk/res/com.gtja.tonywang.lockpattern"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/multi_tv_token_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=""
        android:textSize="22sp" />

    <com.gtja.tonywang.lockpattern.widget.LocusPassWordView
        android:id="@+id/mPassWordView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        gtja:password_min_len="3" />

</RelativeLayout>